strict-peer-dependencies=false
auto-install-peers=true
resolution-mode=highest
legacy-peer-deps=true
node-linker=hoisted
shamefully-hoist=true
prefer-dedupe=true
virtual-store-dir=.pnpm-store
# Disable canvas-related packages that might cause build issues
canvas=false
node-canvas=false
# Allow scripts to run for proper installation
--ignore-scripts=false

# Skip scripts that might cause problems
prefer-frozen-lockfile=false
