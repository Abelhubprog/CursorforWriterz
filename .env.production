# Application Settings
VITE_APP_NAME="HandyWriterz"
VITE_APP_URL=${VITE_APP_URL}
VITE_APP_ENV="production"
VITE_APP_DESCRIPTION="Professional academic writing services"
VITE_API_URL=${VITE_API_URL}
VITE_ADMIN_URL=${VITE_ADMIN_URL}
VITE_ACCOUNTS_URL=${VITE_ACCOUNTS_URL}

# Supabase Configuration (Required)
VITE_SUPABASE_URL=${VITE_SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${VITE_SUPABASE_ANON_KEY}
DATABASE_URL=${DATABASE_URL}

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=${VITE_CLERK_PUBLISHABLE_KEY}
VITE_CLERK_SIGN_IN_URL="/sign-in"
VITE_CLERK_SIGN_UP_URL="/sign-up"
VITE_CLERK_AFTER_SIGN_IN_URL="/dashboard"
VITE_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# Public Access Features
VITE_ENABLE_PUBLIC_ACCESS="true"
VITE_ENABLE_ANONYMOUS_LIKES="true"
VITE_ENABLE_ANONYMOUS_SHARES="true"
VITE_ENABLE_SOCIAL_SHARING="true"
VITE_ENABLE_AUTHENTICATED_COMMENTS="true"
VITE_ENABLE_PUBLIC_LIKES="true"
VITE_ENABLE_PUBLIC_SHARES="true"
VITE_ENABLE_COMMENTS="true"

# Performance Optimization
VITE_ENABLE_QUERY_CACHING="true"
VITE_CACHE_DURATION="3600"
VITE_MAX_CONCURRENT_REQUESTS="20"
VITE_ENABLE_REALTIME="true"
VITE_ENABLE_CDN="true"
VITE_ENABLE_COMPRESSION="true"

# Content Management
VITE_STORAGE_BUCKET="documents-prod"
VITE_ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.txt"
VITE_MAX_FILE_SIZE="10485760"
VITE_MAX_PROCESSING_TIME="1200000"

# Admin Features
VITE_ADMIN_EMAIL=${VITE_ADMIN_EMAIL}
VITE_ENABLE_ADMIN_DASHBOARD="true"
VITE_ENABLE_USER_MANAGEMENT="true"
VITE_ENABLE_CONTENT_MANAGEMENT="true"
VITE_ENABLE_ROLE_MANAGEMENT="true"

# API Configuration
VITE_API_TIMEOUT="30000"
VITE_RETRY_ATTEMPTS="3"

# Analytics
VITE_ENABLE_ANALYTICS="true"
VITE_TRACK_PUBLIC_INTERACTIONS="true"
VITE_TRACK_USER_ENGAGEMENT="true"

# Optional Integrations
VITE_COINBASE_COMMERCE_API_KEY=${VITE_COINBASE_COMMERCE_API_KEY}
VITE_COINBASE_PUBLIC_KEY=${VITE_COINBASE_PUBLIC_KEY}
VITE_COINBASE_COMMERCE_WEBHOOK_SECRET=${VITE_COINBASE_COMMERCE_WEBHOOK_SECRET}
VITE_PUBLIC_ONCHAINKIT_API_KEY=${VITE_PUBLIC_ONCHAINKIT_API_KEY}

# Service Configuration
VITE_TURNITIN_MAX_FILE_SIZE="20971520"
VITE_TURNITIN_ALLOWED_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
VITE_ENABLE_TURNITIN="true"
VITE_ENABLE_TELEGRAM="true"
VITE_TURNITIN_CHECK_PRICE="500"

# Communication
VITE_SMTP_FROM=${VITE_SMTP_FROM}
VITE_TELEGRAM_BOT_TOKEN=${VITE_TELEGRAM_BOT_TOKEN}
VITE_TELEGRAM_CHANNEL_ID=${VITE_TELEGRAM_CHANNEL_ID}

# URLs and Routing
VITE_PAYMENT_SUCCESS_URL="${VITE_APP_URL}/payment/success"
VITE_PAYMENT_CANCEL_URL="${VITE_APP_URL}/payment/cancel"
VITE_DASHBOARD_URL="${VITE_APP_URL}/dashboard"
VITE_ADMIN_DASHBOARD_URL="${VITE_APP_URL}/admin"

# Security Headers
VITE_SECURITY_HEADERS_ENABLED="true"
VITE_CSP_ENABLED="true"
VITE_HSTS_ENABLED="true"

# Additional settings
NODE_ENV="production"
SKIP_PREFLIGHT_CHECK="true"
TSC_COMPILE_ON_ERROR="true"

# Debug Settings
VITE_ENABLE_DEBUG="false"

